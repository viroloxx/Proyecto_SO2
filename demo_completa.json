    "paso1_asignacionEncadenada": {
      "titulo": "Demostrar Asignación Encadenada",
      "acciones": [
        "1. Ir a pestaña 'Tabla de Asignación'",
        "2. Buscar 'video_presentacion.mp4' (20 bloques)",
        "3. Observar columna 'Siguiente Bloque'",
        "4. Ejemplo: Bloque 45 → 52 → 61 → 67 → ... (cadena de 20 bloques)",
        "5. Buscar 'manual_usuario.pdf' (12 bloques)",
        "6. Observar la cadena de 12 bloques enlazados"
      ]
    },
    "paso2_planificadores": {
      "titulo": "Comparar Planificadores de Disco",
      "operaciones": [
        "1. Configurar velocidad: x1 (500ms)",
        "2. Seleccionar planificador FIFO",
        "3. Leer archivos en este orden:",
        "   - video_presentacion.mp4 (bloque lejano)",
        "   - readme.txt (bloque cercano al inicio)",
        "   - base_datos.db (bloque medio)",
        "   - logo_empresa.png (bloque cercano)",
        "4. Observar movimiento del cabezal (rectángulo rojo)",
        "5. Cambiar a SSTF y repetir las mismas lecturas",
        "6. Comparar distancia recorrida en el log"
      ]
    },
    "paso3_bufferCache": {
      "titulo": "Demostrar Buffer Cache FIFO",
      "operaciones": [
        "1. Ir a pestaña 'Cache'",
        "2. Leer readme.txt → CACHE MISS (primera vez)",
        "3. Leer config.ini → CACHE MISS",
        "4. Leer readme.txt → CACHE HIT ✓ (ya está en cache)",
        "5. Leer licencia.txt → CACHE MISS",
        "6. Leer config.ini → CACHE HIT ✓",
        "7. Leer readme.txt → CACHE HIT ✓",
        "8. Observar estadísticas: Tasa de aciertos ~50%"
      ]
    },
    "paso4_estadosProcesos": {
      "titulo": "Observar Estados de Procesos",
      "operaciones": [
        "1. Ajustar velocidad a x0.5 (más lento)",
        "2. Crear un nuevo archivo (nombre: test.dat, tamaño: 5 bloques)",
        "3. Observar en panel 'Cola de Procesos':",
        "   - Proceso aparece en LISTO",
        "   - Pasa a EJECUTANDO (en CPU) - ver log: 'necesita N ciclos'",
        "   - Ejecuta 2-4 ciclos (log: 'ciclos restantes: N')",
        "   - Pasa a BLOQUEADO - aparece en 'Cola I/O'",
        "   - Al completar I/O → TERMINADO",
        "4. Verificar en log el ciclo completo"
      ]
    },
    "paso5_modoUsuario": {
      "titulo": "Demostrar Modo Usuario vs Administrador",
      "operaciones": [
        "1. Cambiar a Modo Usuario (radio button)",
        "2. Observar botones deshabilitados: Crear, Eliminar, Renombrar",
